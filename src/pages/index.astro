---
// index.astro
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import ProjectList from '../components/ProjectList.vue';
import ExperienceList from '../components/ExperienceList.vue';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Fetch projects from Content Collection
const projects = (await getCollection('projects')).filter((project) => !project.data.draft);
// Sort by 'order' field
projects.sort((a, b) => a.data.order - b.data.order);

// Process markdown to HTML
const processedProjects = await Promise.all(projects.map(async (project) => {
  const html = await marked.parse(project.body);
  return {
    ...project,
    html
  };
}));


// Fetch experiences from Content Collection
const rawExperiences = await getCollection('experience');
rawExperiences.sort((a, b) => a.data.order - b.data.order);

const experiences = await Promise.all(rawExperiences.map(async (exp) => {
    const html = await marked.parse(exp.body);
    return {
        role: exp.data.role,
        organization: exp.data.organization,
        date: exp.data.date,
        website: exp.data.website,
        github: exp.data.github,
        tags: exp.data.tags,
        html
    };
}));


