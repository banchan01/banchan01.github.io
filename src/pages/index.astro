<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const emailBtn = document.getElementById('email-btn');
    const emailPopover = document.getElementById('email-popover');
    const copyBtn = document.getElementById('copy-btn');
    const emailText = document.getElementById('email-text');
    const copyIcon = document.getElementById('copy-icon');
    const checkIcon = document.getElementById('check-icon');

    // Toggle Popover
    if (emailBtn && emailPopover) {
      emailBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = emailPopover.classList.contains('hidden');
        
        if (isHidden) {
          emailPopover.classList.remove('hidden');
          // Small delay to allow 'hidden' to be removed before showing opacity/scale
          requestAnimationFrame(() => {
            emailPopover.classList.remove('opacity-0', 'scale-95');
            emailPopover.classList.add('opacity-100', 'scale-100');
          });
        } else {
          hidePopover();
        }
      });

      // Close on click outside
      document.addEventListener('click', (e) => {
        if (!emailPopover.classList.contains('hidden')) {
            if (!emailPopover.contains(e.target) && !emailBtn.contains(e.target)) {
                hidePopover();
            }
        }
      });
    }

    function hidePopover() {
      if (!emailPopover) return;
      emailPopover.classList.remove('opacity-100', 'scale-100');
      emailPopover.classList.add('opacity-0', 'scale-95');
      // Wait for transition to finish before hiding
      setTimeout(() => {
        emailPopover.classList.add('hidden');
      }, 200);
    }

    // Copy Logic
    if (copyBtn && emailText && copyIcon && checkIcon) {
      copyBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const text = emailText.innerText;
        
        navigator.clipboard.writeText(text).then(() => {
          // Show check icon
          copyIcon.classList.add('hidden');
          checkIcon.classList.remove('hidden');
          
          // Revert after 2 seconds
          setTimeout(() => {
            copyIcon.classList.remove('hidden');
            checkIcon.classList.add('hidden');
          }, 2000);
        }).catch(err => {
          console.error('Failed to copy: ', err);
        });
      });
    }
  });
</script>
