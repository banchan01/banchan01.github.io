---
import '../styles/global.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <!-- Google Fonts: Inter & Outfit (for headings) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700&display=swap" rel="stylesheet">
		<title>Kim Min-chan | Portfolio</title>
	</head>
	<body class="bg-slate-50 text-slate-900 font-sans antialiased selection:bg-emerald-100 selection:text-emerald-900 relative selection:text-emerald-900">
    <!-- Background Patterns -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:24px_24px]"></div>
        <div class="absolute top-0 left-0 w-[500px] h-[500px] bg-emerald-400/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-blue-400/10 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"></div>
    </div>
    
    <div class="relative z-10 min-h-screen w-full">
		  <slot />
    </div>
	</body>
</html>

<style is:global>
	:root {
    --font-inter: 'Inter', sans-serif;
    --font-outfit: 'Outfit', sans-serif;
	}
  html {
    font-family: var(--font-inter);
    scroll-behavior: smooth;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-outfit);
  }
</style>
